{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "DOM",
      "ESNext",
      "webworker"
    ],
    "allowJs": false,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "test-utils": [
        "./src/test-utils/test-utils.tsx"
      ]
    }
  },
  "include": [
    "./src",
    "./types"
  ],
  "exclude": [
    "./src/test-utils",
  ],
}